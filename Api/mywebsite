server {
    listen 80;
    server_name www.weivird.com;
    
    rewrite_log             on;
    charset                 utf8;

    client_max_body_size    1024m;

    access_log  /root/log/nginx/mywebsite.access.log;
    error_log  /root/log/nginx/mywebsite.error.log;

    location /static {
        proxy_redirect      off;
        alias               /root/server/My-Website/Api/app/static;
        access_log          off;
        expires             30d;
        add_header  Cache-Control   public;
    }

    location /api {
        include     /etc/nginx/uwsgi_params;
        uwsgi_pass  unix:/tmp/mywebsite.sock;
    }

    root /root/server/My-Website/Web/dist;
    index index.html;

    location / {
        try_files $uri $uri/ @router;
        index index.html;
    }

    location @router {
        rewrite ^.*$ /index.html last;
    }

}